-- Criação da GUI
local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player.PlayerGui

-- Fundo da GUI
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 250)
frame.Position = UDim2.new(0.5, -200, 0.5, -125)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.Parent = screenGui

-- Título da GUI
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.Position = UDim2.new(0, 0, 0, 0)
title.Text = "Player de Música"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.TextScaled = true
title.Parent = frame

-- Caixa de texto para inserir o ID da música
local musicIdBox = Instance.new("TextBox")
musicIdBox.Size = UDim2.new(0.8, 0, 0, 50)
musicIdBox.Position = UDim2.new(0.1, 0, 0.2, 0)
musicIdBox.PlaceholderText = "Digite o ID da música"
musicIdBox.TextColor3 = Color3.fromRGB(255, 255, 255)
musicIdBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
musicIdBox.TextScaled = true
musicIdBox.Parent = frame

-- Botão de Reproduzir Música
local playButton = Instance.new("TextButton")
playButton.Size = UDim2.new(0.8, 0, 0, 50)
playButton.Position = UDim2.new(0.1, 0, 0.4, 0)
playButton.Text = "Tocar Música"
playButton.TextColor3 = Color3.fromRGB(255, 255, 255)
playButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
playButton.TextScaled = true
playButton.Parent = frame

-- Botão de Parar Música
local stopButton = Instance.new("TextButton")
stopButton.Size = UDim2.new(0.8, 0, 0, 50)
stopButton.Position = UDim2.new(0.1, 0, 0.6, 0)
stopButton.Text = "Parar Música"
stopButton.TextColor3 = Color3.fromRGB(255, 255, 255)
stopButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
stopButton.TextScaled = true
stopButton.Parent = frame

-- Variável para controlar o som
local musicPlaying = nil

-- Função para tocar a música
playButton.MouseButton1Click:Connect(function()
    local musicId = musicIdBox.Text
    if musicId ~= "" and musicPlaying == nil then
        -- Toca a música com o ID inserido
        musicPlaying = Instance.new("Sound")
        musicPlaying.SoundId = "rbxassetid://" .. musicId
        musicPlaying.Parent = game.Workspace
        musicPlaying:Play()
    end
end)

-- Função para parar a música
stopButton.MouseButton1Click:Connect(function()
    if musicPlaying then
        musicPlaying:Stop()
        musicPlaying:Destroy()
        musicPlaying = nil
    end
end)
